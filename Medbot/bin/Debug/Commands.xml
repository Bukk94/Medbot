		<!-- Úspešná hláška, jeden parametr: {0: about hláška} -->
		<!-- Chybová hláška, žádný parametr: -->
		<Command Handler="Help" 
		BroadcasterOnly="false" 
		ModPermissionRequired="false"
		SendWhisper="false"
		AboutCommand="Vypíše nápovědu o příkazu. Příklad:  !help rank"
		SuccessMessage="{0}"
		FailMessage=""
		ErrorMessage=""
		Cooldown="00:00:30"
		>!help {1}</Command> 
  </Commands>
</Medbot>